{
  "name": "ai-news-backend",
  "version": "2.1.0",
  "description": "Node.js Express backend for AI News Generator",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:seed": "node src/config/seeder.js",
    "migrate:up": "node-pg-migrate up --envPath .env",
    "migrate:down": "node-pg-migrate down --envPath .env",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.13.1",
    "pg-format": "^1.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^6.3.3"
  }
}